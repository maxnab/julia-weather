{
  "compilerOptions": {
    "target": "es2016",                   
    "jsx": "react",
    "module": "commonjs",                               
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,            
    "strict": true, 
    "noImplicitAny": true,                                     
    "skipLibCheck": true                                
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
