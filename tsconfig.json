{
  "compilerOptions": {
    "target": "es2015",                   
    "jsx": "react",
    "module": "es2020",
    "moduleResolution": "node",                               
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,            
    "strict": true, 
    "noImplicitAny": true,                                     
    "skipLibCheck": true                                
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
